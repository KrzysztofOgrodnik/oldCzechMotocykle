import java.util.Random;
class Calculator {

// dodawanie

	double a, b, c, d; 

//pierwsza metoda
	double add(double a, double b) {
		this.a = a;
		this.b = b;
		
		return this.a + this.b;	
		
	}
// druga metoda - moze byc ta sama nazwa, ale musi byc rozna liczba zmiennych;
// lub musza byc innego typu;

	double add(double a, double b, double c) {
		this.a = a;
		this.b = b;
		this.c = c;
		return add(this.a, this.b) + this.c;	 
	}
	double add(double a, double b, double c, double d) {
		this.a = a;
		this.b = b;
		this.c = c;
		this.d = d;
		
		return add(this.a, this.b, this.c) +this.d;
	}

	}
